{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "hidden": true
        },
        {
            "name": "ninja-multi",
            "inherits": "default",
            "displayName": "Ninja Multi-Config",
            "generator": "Ninja Multi-Config"
        },
        
        {
            "name": "vs2022-msvc",
            "inherits": "default",
            "displayName": "VS2022",
            "generator": "Visual Studio 17 2022",
            "architecture": "Win32",
            "hidden": true
        },
        {
            "name": "vs2022-msvc-debug",
            "inherits": "vs2022-msvc",
            "displayName": "VS2022 MSVC Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "vs2022-msvc-release",
            "inherits": "vs2022-msvc",
            "displayName": "VS2022 MSVC Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "vs2022-clang",
            "inherits": "vs2022-msvc",
            "displayName": "VS2022",
            "toolset": "ClangCL",
            "hidden": true
        },
        {
            "name": "vs2022-clang-debug",
            "inherits": "vs2022-clang",
            "displayName": "VS2022 Clang Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "vs2022-clang-release",
            "inherits": "vs2022-clang",
            "displayName": "VS2022 Clang Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}